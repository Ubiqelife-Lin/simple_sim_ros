<?xml version="1.0"?>
<launch>
  <arg name="use_rviz" default="true"/>

  <node pkg="rviz" type="rviz" name="rviz"
      args="-d $(find bullet_server)/config/bullet_server.rviz"
      if="$(arg use_rviz)"/>

  <node pkg="bullet_server" type="bullet_server" name="bullet_server"
      output="screen"/>

</launch>
